#!/bin/bash
echo "    ,"
echo "   /-\\---------------------"
echo "  //_\\\\   Package Removal  \\"
echo " /// \\\\\\---------------------"
echo "/.-' '-.\\"
echo ""
package=$(</etc/argon/package)
pacaur -Rs $package
echo ""
echo "    ,"
echo "   /-\\-----------------------------------------------------"
echo "  //_\\\\   process complete, you may now close this window  \\"
echo " /// \\\\\\-----------------------------------------------------"
echo "/.-' '-.\\"
